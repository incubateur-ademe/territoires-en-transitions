{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "target": "es2021",
    "module": "esnext",
    "lib": ["es2023", "dom", "dom.iterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",

    "paths": {
      "@/api": ["./packages/api/src/index"],
      "@/api/*": ["./packages/api/src/*"],
      "@/app/*": ["./apps/app/src/*"],
      "@/auth/*": ["./apps/auth/*"],
      "@/backend/*": ["./apps/backend/src/*"],
      "@/backend/test": ["./apps/backend/test/index"],
      "@/domain/*": ["./apps/backend/src/*/index-domain"],
      "@/domain/trpc-router": ["./packages/domain/src/utils/trpc/trpc.router"],
      "@/panier/*": ["./apps/panier/*"],
      "@/site/*": ["./apps/site/*"],
      "@/tools/*": ["./apps/tools/src/*"],
      "@/ui": ["./packages/ui/src/index"],
      "@/ui/*": ["./packages/ui/src/*"]
    }
  },
  "exclude": ["node_modules","tmp","dist","build","coverage","**/*.spec.ts","**/*.test.ts","**/*.stories.tsx","apps/panier/components/Picto/*.tsx"]
}
