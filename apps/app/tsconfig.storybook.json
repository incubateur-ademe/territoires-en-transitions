{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "out-tsc/storybook",
    "paths": {
      "@/app/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.stories.ts",
    "src/**/*.stories.js",
    "src/**/*.stories.jsx",
    "src/**/*.stories.tsx",
    ".storybook/*.js",
    ".storybook/*.ts",
    "app/**/*.stories.tsx",
    ".storybook/preview.tsx",
    "**/fixture.json"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.jsx",
    "src/**/*.test.js"
  ],
  "references": [
    {
      "path": "./tsconfig.project.json"
    }
  ]
}
