{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "out-tsc/app",
    "noEmit": true,
    // "emitDeclarationOnly": false,
    // "composite": false,
    // "declarationMap": false,
    // "declaration": false,
    "types": [
      "node",
    ],
    "allowJs": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/app/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "out-tsc/**/*",
    "vitest.config.mts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.stories.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx",
    "**/*.stories.ts",
    "**/*.stories.js",
    "**/*.stories.jsx",
    "**/*.stories.tsx"
  ]
  // "references": [
  //   {
  //     "path": "../../packages/ui/tsconfig.lib.json"
  //   },
  //   {
  //     "path": "../../packages/domain/tsconfig.lib.json"
  //   },
  //   {
  //     "path": "../../packages/api/tsconfig.lib.json"
  //   }
  // ]
}
