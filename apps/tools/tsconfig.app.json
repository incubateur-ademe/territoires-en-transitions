{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "types": ["node"],

    "module": "nodenext",
    "moduleResolution": "nodenext",
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/*.spec.ts",
    "**/*.e2e-spec.ts",
    "**/*.test.ts",
    "**/*.test-fixture.ts"
  ],
  "references": [
    {
      "path": "../../packages/domain/tsconfig.lib.json"
    },
    {
      "path": "../backend/tsconfig.app.json"
    }
  ]
}
