{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "main",
  "compilerOptions": {
    "tsConfigPath": "tsconfig.app.json",
    "builder": {
      "type": "swc",
      "options": {
        "extensions": [".ts", ".tsx"]
      }
    },
    "assets": [
      { "include": "**/*.csv", "outDir": "dist" },
      { "include": "**/*.xlsx", "outDir": "dist" },
      { "include": "**/*.pptx", "outDir": "dist" },
      { "include": "**/*.ttf", "outDir": "dist" }
    ]
  }
}
