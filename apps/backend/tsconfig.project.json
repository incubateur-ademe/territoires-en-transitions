{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "types": ["node"],
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",

    "paths": {
      "@tet/backend/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "vitest.config.mts",
    "src/**/*.spec.ts",
    "src/**/*.e2e-spec.ts",
    "src/**/*.test.ts",
    "src/**/*.test-fixture.ts",
  ],
  "references": [
    {
      "path": "../../packages/domain/tsconfig.lib.json"
    }
  ]
}
