{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "singularName": "service",
    "pluralName": "services",
    "displayName": "Services",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    },
    "uid": {
      "type": "uid",
      "targetField": "titre",
      "required": true
    },
    "titre": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "description_markdown": {
      "type": "richtext",
      "required": true,
      "maxLength": 1500
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "sous_page": {
      "type": "boolean",
      "default": false
    },
    "contenu": {
      "type": "dynamiczone",
      "components": ["services.paragraphe", "services.liste", "services.info"]
    }
  }
}
