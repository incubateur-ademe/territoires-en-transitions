{
  "name": "@tet/ui",
  "description": "frontend library containing shared components and design system",
  "private": true,
  "type": "module",
  "exports": {
    "./global.css": "./src/global.css",
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./src/*.ts",
      "import": "./src/*.ts",
      "default": "./src/*.ts"
    }
  },
  "nx": {
    "name": "ui",
    "targets": {
      "chromatic": {
        "executor": "nx:run-commands",
        "options": {
          "command": "chromatic --project-token=${CHROMATIC_PROJECT_TOKEN}",
          "cwd": "packages/ui"
        }
      }
    }
  }
}
