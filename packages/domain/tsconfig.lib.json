{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node"],
    // "composite": true,
    // "declaration": true,
    // "declarationMap": true,
    // "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": false,

    // NodeNext resolution required to be compatible with Nest.js apps compilation.
    "module": "nodenext",
    "moduleResolution": "nodenext",
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/*.spec.ts",
    "**/*.e2e-spec.ts",
    "**/*.test.ts",
    "**/*.service.ts",
    "**/*.controller.ts",
    "**/*.module.ts",
    "**/*.router.ts",
    "**/*.decorator.ts",
    "**/*.interceptor.ts"
  ]
}
